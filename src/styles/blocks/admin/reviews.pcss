.reviews {
  margin-bottom: 30px;
  padding-top: 30px;
}
.reviews__form {
  background-color: #ffffff;
  box-shadow: 4px 3px 20px rgba(0, 0, 0, 0.07);
  
  @media screen and (max-width: 470px) {
    margin: 0 -20px;
  }
}



.review__list {
  display: grid;
  gap: 30px;
  grid-template-columns: repeat( auto-fit, minmax(340px, 1fr) );
  
  @media screen and (max-width: 470px) {
    grid-template-columns: 1fr;
    gap: 10px;
    margin: 0 -20px;
  }
}
