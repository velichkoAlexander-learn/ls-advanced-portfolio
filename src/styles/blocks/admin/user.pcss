/* user */
.user {
  display: flex;
  align-items: center;
}

.user__info {
  line-height: 1.3;
}

.user__avatar {
  margin-right: 20px;
  width: 44px;
  height: 45px;
  overflow: hidden;
  border-radius: 50%;
  flex-shrink: 0;
}

.user__name {
  font-size: 18px;
  font-weight: 400;
  color: #ffffff;
  
  @media screen and (max-width: 570px) {
    font-size: 16px;
  }
}

.user__logout {
  @media screen and (min-width: 361px) {
    display: none;
  }
}

/*  end user */
