.slider-controls {
  display: flex;
}

.slider-controls__button {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50px;
  height: 50px;
  border: 1px solid #353e4e;
  border-radius: 50%;
  cursor: pointer;
  
  &--left {
    margin-right: 30px;
    transform: rotate(180deg);
  }
}

.slider-controls__icon {
  width: 8px;
  height: 10px;
  fill: #353e4e;
}

