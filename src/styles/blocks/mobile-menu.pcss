.mobile-menu {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 200;
  max-width: 326px;
  width: 100%;
  height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transition: .25s ease-in-out;
  transform: translateX(100%);
  
  &.active {
    transform: translateX(0);
  }
}

.mobile-menu__nav {
  margin-bottom: 60px;
  
  .nav__list {
    flex-direction: column;
  }
  
  .nav__link {
    font-size: 18px;
    line-height: 2.67;
    font-weight: 600;
    color: #414c63;
  }
}

.mobile-menu__btn-close {
  position: absolute;
  top: 70px;
  right: 45px;
  width: 20px;
  height: 20px;
  background-image: url(data:image/png;base64,);
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
